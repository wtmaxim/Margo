<!doctype html>
<head>
    <meta charset="utf-8">
    <title>{{ 'Margo' }}</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
    <link href='https://fonts.googleapis.com/css?family=Roboto:300' rel='stylesheet' type='text/css'>
    <link href="{{ app.request.basepath }}/css/normalize.css" rel="stylesheet" type='text/css'>
    <link href="{{ app.request.basepath }}/css/alert.css" rel="stylesheet" type='text/css'>
    <link href="{{ app.request.basepath }}/css/button.css" rel="stylesheet" type='text/css'>
    <link href="{{ app.request.basepath }}/css/style.css" rel="stylesheet" type='text/css'>
</head>
<body>

<header>
    <div class="logo">
        <img src="{{ app.request.basepath }}/img/logo-red.png">
    </div>
    <div class="title">
        {% block title %}
        {% endblock %}
    </div>
</header>

<nav>
    <div class="title">
        MENU
    </div>

    <div class="menu">

        <hr>

        <div class="etu">
            <a href="{{ path('etudiants') }}">
                <i class="fa fa-child fa-3x"></i><br>
                Etudiant
            </a>
        </div>

        <hr>

        <div class="prof">
            <a href="{{ path('teachers') }}">
                <i class="fa fa-male fa-3x"></i><br>
                Profs
            </a>
        </div>

        <hr>

        <div class="prof">
            <a href="{{ path('categories') }}">
                <i class="fa fa-male fa-3x"></i><br>
                Classes
            </a>
        </div>

        <hr>

        <div class="prof">
            <a href="{{ path('subject') }}">
                <i class="fa fa-book fa-3x" aria-hidden="true"></i><br>
                Cours
            </a>
        </div>

        <hr>
    </div>
</nav>

<section>
    {% block content %}
    {% endblock %}
</section>

<footer>

</footer>

</body>
</html>