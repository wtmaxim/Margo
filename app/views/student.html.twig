{% extends 'layout.html.twig' %}
{% set active = 'account' %}

{% block content %}
   <a href="{{ path('admin_etudiant_add') }}">{{ 'Ajouter un élève' }}</a>
   <table class="table table-hover">
      <thead>
      <tr>
         <th> {{ 'Nom' }} </th>
         <th> {{ 'Prenom' }} </th>
         <th> {{ 'Classe' }} </th>
         <th> {{ 'Action' }}</th>
      </tr>
      </thead>
      <tbody>
      {% for etudiant in etudiants %}
         <tr>
            <td> {{ etudiant.name }} </td>
            <td> {{ etudiant.firstName }} </td>
            <td> {{ etudiant.category.categName }} </td>
            <td>
               <a href="{{ path('admin_etudiant_delete', {'etudiant': etudiant.studentId}) }}">delete</a>
               <a href="{{ path('admin_etudiant_edit', {'etudiant': etudiant.studentId}) }}">Edit</a>
            </td>
         </tr>
      {% else %}
         <tr>
            <td>{{ '0 etudiant.' }}</td>
         </tr>
      {% endfor %}
      </tbody>
   </table>
{% endblock %}
