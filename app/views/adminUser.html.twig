{% extends 'layout.html.twig' %}
{% set active = 'account' %}

{% block title %}
    Administration - Utilisateurs
{% endblock %}

{% block content %}
    <a href="{{ path('admin_user_add') }}" class="btn btn-add">{{ 'Ajouter un utilisateur' }}</a>
    <table class="table table-hover">
        <thead>
        <tr>
            <th> {{ 'Nom' }} </th>
            <th> {{ 'Mail' }}</th>
            <th> {{ 'RÃ´le' }}</th>
            <th> {{ 'Action' }}</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td> {{ user.username }} </td>
                <td> {{ user.mail }} </td>
                <td> {{ user.role }} </td>
                <td>
                    <a href="{{ path('admin_user_delete', {'user': user.id}) }}" class="btn btn-table btn-del">Supprimer</a>
                    <a href="{{ path('admin_user_edit', {'user': user.id}) }}" class="btn btn-table btn-edit">Editer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td>{{ '0 etudiant.' }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
